<div class='container-md mx-auto bg-gray-100 dark:bg-gray-800 rounded-lg p-4 w-full md:w-2/3 lg:w-2/5'>
  <%= form_with(model: Project.new, url: projects_path, method: :post, html: { class: 'max-w-sm mx-auto' }) do |form| %>
    <div class="mb-8">
      <%= form.label :name, class: 'label' %>
      <%= form.text_field :name, class: 'input-text', required: true %>
    </div>
    <div class="flex mt-8 justify-between gap-8">
      <%= link_to projects_path, class: 'btn-secondary' do %>
        Cancel
      <% end %>
      <%= form.submit 'Save', class: 'btn-primary w-auto' %>
    </div>
  <% end %>
</div>
